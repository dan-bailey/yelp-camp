<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input required class="form-control" type="text" name="campground[title]" id="title">
            <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input required class="form-control" type="text" name="campground[location]" id="location">
            <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="image">Add Images</label>
            <input class="form-control" type="file" name="image" id="image" multiple>
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea required class="form-control" type="text" name="campground[description]" id="description"></textarea>
            <div class="valid-feedback">Looks good!</div>
        </div>
        <label for="price" class="form-label">Cost per Night</label>
        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">$</span>
            <input required type="text" class="form-control" placeholder="0.00" name="campground[price]">
            <div class="valid-feedback">Looks good!</div>
          </div>
        <div class="mb-5">
        <button class="btn btn-success">Add Campground</button>
        </div>
        </form>
        <a href="/campgrounds">Return to Index</a></div>
    </div>
</div>

